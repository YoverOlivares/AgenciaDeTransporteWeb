@model List<AgenciaDeTransporteWeb.Models.Entities.Reserva>
@{
    ViewData["Title"] = "Mis Reservas";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-ticket-alt me-2 text-primary"></i>
            Mis Reservas
        </h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-plus me-2"></i>
            Nueva Reserva
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var reserva in Model)
            {
                <div class="col-lg-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="mb-0 text-primary">
                                @reserva.Viaje.Ruta.CiudadOrigen → @reserva.Viaje.Ruta.CiudadDestino
                            </h6>
                            <span class="badge @GetEstadoBadgeClass(reserva.EstadoReserva)">
                                @reserva.EstadoReserva
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="reservation-details">
                                <div class="detail-row">
                                    <i class="fas fa-barcode text-muted me-2"></i>
                                    <strong>Código:</strong>
                                    <span class="ms-auto">@reserva.CodigoReserva</span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-calendar text-muted me-2"></i>
                                    <strong>Fecha:</strong>
                                    <span class="ms-auto">@reserva.Viaje.FechaSalida.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-clock text-muted me-2"></i>
                                    <strong>Hora:</strong>
                                    <span class="ms-auto">@reserva.Viaje.FechaSalida.ToString("HH:mm")</span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-chair text-muted me-2"></i>
                                    <strong>Asiento:</strong>
                                    <span class="ms-auto">
                                        #@reserva.Asiento.NumeroAsiento
                                        <small class="text-muted">(@reserva.Asiento.TipoAsiento)</small>
                                    </span>
                                </div>
                                <div class="detail-row">
                                    <i class="fas fa-bus text-muted me-2"></i>
                                    <strong>Autobús:</strong>
                                    <span class="ms-auto">@reserva.Viaje.Autobus.Placa</span>
                                </div>
                                <hr>
                                <div class="detail-row">
                                    <strong class="text-success">Total:</strong>
                                    <strong class="ms-auto text-success">S/. @reserva.MontoTotal</strong>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex gap-2 justify-content-end">
                                <a asp-action="Detalles" asp-route-codigo="@reserva.CodigoReserva"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i>Ver
                                </a>

                                @if (reserva.EstadoReserva == "Pendiente")
                                {
                                    <a asp-action="Pagar" asp-route-id="@reserva.Id"
                                       class="btn btn-success btn-sm">
                                        <i class="fas fa-credit-card me-1"></i>Pagar
                                    </a>
                                    <form asp-action="Cancelar" asp-route-id="@reserva.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger btn-sm"
                                                onclick="return confirm('¿Está seguro de cancelar esta reserva?')">
                                            <i class="fas fa-times me-1"></i>Cancelar
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-ticket-alt text-muted" style="font-size: 4rem;"></i>
            </div>
            <h4 class="text-muted">No tienes reservas</h4>
            <p class="text-muted">¡Reserva tu primer viaje y comienza tu aventura!</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>
                Hacer una Reserva
            </a>
        </div>
    }
</div>

<style>
    .detail-row {
        display: flex;
        align-items: center;
        padding: 8px 0;
    }

        .detail-row i {
            width: 20px;
        }

    .reservation-details {
        font-size: 14px;
    }

    .card {
        transition: transform 0.2s ease;
    }

        .card:hover {
            transform: translateY(-2px);
        }
</style>

@functions {
    private string GetEstadoBadgeClass(string estado)
    {
        return estado switch
        {
            "Pendiente" => "bg-warning text-dark",
            "Confirmada" => "bg-success",
            "Cancelada" => "bg-danger",
            "Completada" => "bg-info",
            _ => "bg-secondary"
        };
    }
}