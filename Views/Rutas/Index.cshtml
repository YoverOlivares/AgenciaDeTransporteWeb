@model IEnumerable<AgenciaDeTransporteWeb.Models.Entities.Ruta>
@{
    ViewData["Title"] = "Rutas Disponibles";
}

<h1>Rutas Disponibles</h1>

<table class="table">
    <thead>
        <tr>
            <th>Origen</th>
            <th>Destino</th>
            <th>Precio</th>
            <th>Duración (horas)</th>
            <th>Distancia (km)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ruta in Model)
        {
            <tr>
                <td>@ruta.CiudadOrigen</td>
                <td>@ruta.CiudadDestino</td>
                <td>@ruta.Precio.ToString("C")</td>
                <td>@ruta.DuracionHoras</td>
                <td>@ruta.DistanciaKm</td>
            </tr>
        }
    </tbody>
</table>    