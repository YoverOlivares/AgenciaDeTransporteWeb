@model AgenciaDeTransporteWeb.Models.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">Ocurrió un error al procesar tu solicitud.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>ID de la solicitud:</strong> <code>@Model.RequestId</code>
    </p>
}

<div class="alert alert-warning">
    <h4>¿Qué puedes hacer?</h4>
    <ul>
        <li>Verifica que la URL sea correcta</li>
        <li>Regresa a la página anterior</li>
        <li>Ve a la página de inicio</li>
    </ul>
</div>

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Ir al Inicio</a>
    <button onclick="history.back()" class="btn btn-secondary">Página Anterior</button>
</div>